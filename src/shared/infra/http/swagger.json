{
  "openapi": "3.0.0",
  "info": {
    "title": "Perfect Beer API",
    "description": "API para cadastro de estilos de cerveja e consulta de recomendações",
    "version": "1.0.0",
    "contact": {
      "email": "nelson.carvalho.13@outlook.com"
    }
