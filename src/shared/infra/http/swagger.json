  "paths": {
    "/beer_styles": {
      "post": {
        "tags": ["Estilos de cerveja"],
        "summary": "Cadastrar estilo de cerveja",
        "description": "Cadastrar um novo estilo de cerveja",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "required": true
                  },
                  "minimum_temperature": {
                    "type": "number",
                    "required": true
                  },
                  "maximum_temperature": {
                    "type": "number",
                    "required": true
                  }
                }
              },
              "example": {
                "name": "some example",
                "minimum_temperature": -5,
                "maximum_temperature": 10
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Cadastro realizado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "b765ae09-012a-420e-96c2-ad5f0f0f9019"
                    },
                    "name": {
                      "type": "string",
                      "example": "some example"
                    },
                    "minimum_temperature": {
                      "type": "number",
                      "example": -5
                    },
                    "maximum_temperature": {
                      "type": "number",
                      "example": 10
                    },
                    "created_at": {
                      "type":  "string",
                      "example": "2021-12-03T02:38:41.313Z"
                    },
                    "updated_at": {
                      "type": "string",
                      "example": "2021-12-03T02:38:41.313Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Requisição inválida (campos nulos, nome já cadastrado ou temperatura mínima maior que máxima)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Can't create a beer style with nullable name, minimum or maximum temperatures!"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Internal Server Error"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Estilos de cerveja"],
        "summary": "Listar estilos de cerveja",
        "description": "Listar todos os estilos de cerveja com possibilidade de filtro por nome",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Nome ou parte do nome do estilo de cerveja",
            "required": false,
            "schema": {
              "type": "string",
              "example": "beer"
            }
          }
        ],
        "responses":{
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "example": "b765ae09-012a-420e-96c2-ad5f0f0f9019"
                      },
                      "name": {
                        "type": "string",
                        "example": "some example"
                      },
                      "minimum_temperature": {
                        "type": "number",
                        "example": -5
                      },
                      "maximum_temperature": {
                        "type": "number",
                        "example": 10
                      },
                      "created_at": {
                        "type":  "string",
                        "example": "2021-12-03T02:38:41.313Z"
                      },
                      "updated_at": {
                        "type": "string",
                        "example": "2021-12-03T02:38:41.313Z"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Internal Server Error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
