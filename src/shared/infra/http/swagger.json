    "/beer_styles/import": {
      "post": {
        "tags": ["Estilos de cerveja"],
        "summary": "Importar estilos de cerveja",
        "description": "Importar estilos de cerveja a partir de CSV",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
