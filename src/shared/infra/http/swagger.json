    "/beer_styles/perfect": {
      "post": {
        "tags": ["Estilos de cerveja"],
        "summary": "Exibir a cerveja perfeita",
        "description": "Exibir a cerveja perfeita com temperatura mínima mais próxima da temperatura informada (desde que esta não seja inferior à mínima)",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "temperature":  {
                    "type": "number",
                    "example": -5,
                    "required": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Dados encontrados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "beerStyle": {
                      "type": "string",
                      "example": "some beer style"
                    },
                    "playlist": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string",
                          "example": "some beer style playlist"
                        },
                        "tracks": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "name": {
                                "type": "string",
                                "example": "some music name"
                              },
                              "artist": {
                                "type": "string",
                                "example": "some music artist"
                              },
                              "url": {
                                "type": "string",
                                "example": "http://some.music.url/"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
