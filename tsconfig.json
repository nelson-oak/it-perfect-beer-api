{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                           
    "strict": false,                                 
    "baseUrl": "./src",
    "outDir": "./build",                             
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"]
    },                                 
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,        
    "resolveJsonModule": true
  }
} 